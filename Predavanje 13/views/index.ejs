<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/header') %>
        <title>Moja blog stranica</title>
</head>

<body>
    <h1>Dobrodošli na naš blog</h1>
    <ul>
        <% blogs.forEach(blog=> {%>
            <li><a href="/blog/<%=blog._id%>">
                    <%=blog.title%>
                </a></li>
            <%})%>
    </ul>

    <% if(admin===true) { %>
        <h2>Dodajte novi blog</h2>
        <form action="/blog/new" method="POST">
            <label for="title">Title:</label>
            <input type="text" id="title" name="title" required>
            <button type="submit">Dodaj blog</button>
        </form>
        <% } %>

            <a href="/statistics">Statistika</a>
            <%- include('partials/footer') %>
</body>

</html>